<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/keyline_1"
        android:paddingLeft="@dimen/keyline_1"
        android:paddingEnd="@dimen/keyline_1"
        android:paddingRight="@dimen/keyline_1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_marginTop="@dimen/keyline_1_minus_8dp"
            android:layout_marginBottom="@dimen/keyline_1_minus_8dp"
            android:text="Agendamentos"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_large"
            android:textColor="@color/colorPrimaryTextTitle"
            android:id="@+id/schedule_txt"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/schedule_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="1dp"
            android:scrollbars="vertical" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_marginTop="@dimen/keyline_1_minus_8dp"
            android:layout_marginBottom="@dimen/keyline_1_minus_8dp"
            android:text="Atividades programadas"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_large"
            android:textColor="@color/colorPrimaryTextTitle"
            android:id="@+id/assigments_txt"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/assigments_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="1dp"
            android:scrollbars="vertical" />

    </LinearLayout>



</ScrollView>