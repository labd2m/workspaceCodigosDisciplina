<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.intentfilterp2"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <activity android:name=".IT2" android:label="IT2" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <intent-filter>
                <action android:name="ACAO_DESEJADA" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <activity android:name=".IT3" android:label="@string/title_activity_it3" >
            <intent-filter>
                <action android:name="ACAO_DESEJADA" />
				<category android:name="android.intent.category.DEFAULT" />
                <category android:name="CATEGORIA_CUSTOMIZADA" />
            </intent-filter>
        </activity>
        
    </application>
</manifest>
