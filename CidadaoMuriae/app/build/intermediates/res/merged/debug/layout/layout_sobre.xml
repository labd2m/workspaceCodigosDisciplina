<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/muriaefundo"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Sobre" >

    <ImageView
        android:id="@+id/fundo_texto_sobre"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:alpha="0.8"
        android:background="@drawable/roundshapebranco"
        android:src="@drawable/roundshapebranco" />

    <ImageView
        android:id="@+id/logoSobre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/fundo_texto_sobre"
        android:layout_alignRight="@+id/fundo_texto_sobre"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_margin="50dp"
        android:src="@drawable/logonova" />

    <TextView
        android:id="@+id/versaoSobre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/fundo_texto_sobre"
        android:layout_centerHorizontal="true"
        android:text="Versão ..."
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#000000" 
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/infoUsuarios"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/versaoSobre"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:text="©2013-2014"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/urlCidadoVicosaSobre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/fundo_texto_sobre"
        android:layout_centerHorizontal="true"
        android:autoLink="web"
        android:text="http://muriae.cidadaonarua.com"
        android:textColorLink="#01118c"
        android:textStyle="italic"
        android:layout_marginBottom="27dp" />

    <TextView
        android:id="@+id/acesseSobre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/urlCidadoVicosaSobre"
        android:layout_centerHorizontal="true"
        android:text="Acesse"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/EmailSobre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/acesseSobre"
        android:layout_centerHorizontal="true"
        android:autoLink="email"
        android:text="contato@cidadaonarua.com"
        android:textColorLink="#01118c"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/equipeSobre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/EmailSobre"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical|center_horizontal"
        android:text="Contato"
        android:textColor="#000000"
        android:textStyle="bold" />

</RelativeLayout>