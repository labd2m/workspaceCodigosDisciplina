<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#000000">

    <TextView
        android:id="@+id/tituloSobre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Email"
        android:textColor="#ffffff"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/edt_loginEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tituloSobre"
        android:ems="10"
        android:textCursorDrawable="@null"
        android:textColor="#727272"
        android:inputType="textEmailAddress" >
        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/versaoSobre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/edt_loginEmail"
        android:text="Senha"
        android:textColor="#ffffff"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/edt_loginSenha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/versaoSobre"
        android:ems="10"
        android:textCursorDrawable="@null"
        android:textColor="#727272"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/tv_loginErro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edt_loginSenha"
        android:layout_centerHorizontal="true"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FF4444"
        android:textStyle="bold" />

    <Button
        android:id="@+id/bt_loginCadastro"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Nova conta. Cadastrar"
		android:background="@null"
        android:textColor="#33B5E5"
        android:textStyle="bold"
        android:onClick="eventologincadastro" />

    <Button
        android:id="@+id/bt_loginLogin"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:layout_below="@+id/tv_loginErro"
        android:layout_centerHorizontal="true"
        android:onClick="eventologinlogin"
        android:text="Login"
        android:textColor="#FFFFFF"
        android:background="@drawable/fundobotaopadrao"
        android:textStyle="bold" />

</RelativeLayout><!-- From: file:/C:/Users/Lucas/AndroidStudioProjects/CidadaoMuriae/app/src/main/res/layout/layout_login.xml -->